<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/ALA_FrameLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Alarms.AlarmFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/llBodyCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/llTopCardView"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bcvInnerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBackground">



                    <TableLayout
                        android:id="@+id/rlTableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:id="@+id/tlGazTableRow"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/white_subtle_border">

                            <TextView
                                android:id="@+id/trGazText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:background="@drawable/bordered_lightgreen"

                                android:textSize="24sp"
                                android:text="@string/ALAtrGazText">

                            </TextView>

                            <CheckBox
                                android:id="@+id/trGazCheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tlCresTempRow"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/white_subtle_border" >

                            <TextView
                                android:id="@+id/trCresTempText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:background="@drawable/bordered_lightgreen"

                                android:textSize="24sp"
                                android:text="@string/ALAtrCresTempText" >

                            </TextView>

                            <CheckBox
                                android:id="@+id/trCresTempCheckboc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tlParFizioRow"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/white_subtle_border">

                            <TextView
                                android:id="@+id/trParFizioText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:background="@drawable/bordered_lightgreen"

                                android:textSize="24sp"
                                android:text="@string/ALAtrParFizioText">

                            </TextView>

                            <CheckBox
                                android:id="@+id/trParFizioCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tlAnomaliiRow"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/white_subtle_border">

                            <TextView
                                android:id="@+id/trAnomaliiText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:background="@drawable/bordered_lightgreen"

                                android:textSize="24sp"
                                android:text="@string/ALAtrAnomaliiText">

                            </TextView>

                            <CheckBox
                                android:id="@+id/trAnomaliiCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/tlSistemCazutRow"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/white_subtle_border">

                            <TextView
                                android:id="@+id/trSistemCazutText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:background="@drawable/bordered_lightgreen"

                                android:textSize="24sp"
                                android:text="@string/ALAtrSistemCazutText">

                            </TextView>

                            <CheckBox
                                android:id="@+id/trSistemCazutCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false" />

                        </TableRow>

                    </TableLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>